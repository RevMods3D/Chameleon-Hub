<Window x:Class="Chameleon_Hub.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Chameleon Hub"
        Height="600" Width="1000"
        MinHeight="600" MinWidth="800"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        Background="#FF1E1E1E" Foreground="#FFD4D4D4"
        WindowStyle="None"
        AllowsTransparency="False">

    <DockPanel LastChildFill="True">
        <!-- TITLE BAR -->
        <Grid DockPanel.Dock="Top" Height="40" Background="#FF2D2D30" MouseLeftButtonDown="DragWindow_MouseDown">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Logo + Title -->
            <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="10,0,0,0">
                <Image Source="/Resources/Chameleon hub.png" Width="30" Height="30" Margin="0,0,5,0"/>
                <TextBlock Text="Chameleon Hub" Foreground="#FFD4D4D4" FontWeight="Bold" FontSize="20" VerticalAlignment="Center" Width="150" Height="27"/>
            </StackPanel>

            <!-- Window Buttons -->
            <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Top">
                <Button Width="40" Height="40" Content="—" Click="MinimizeButton_Click"
                        Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" Foreground="#FFD4D4D4" />
                <Button Width="40" Height="40" Content="▢" Click="MaximizeButton_Click"
                        Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" Foreground="#FFD4D4D4" />
                <Button Width="40" Height="40" Content="X" Click="CloseButton_Click"
                        Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" Foreground="#FFD4D4D4" />
            </StackPanel>
        </Grid>

        <!-- MAIN GRID -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <!-- Sidebar -->
                <ColumnDefinition Width="*"/>
                <!-- Content -->
            </Grid.ColumnDefinitions>

            <!-- SIDEBAR -->
            <StackPanel Grid.Column="0" Background="#FF252526">
                <TextBlock Text="Games" Foreground="White" FontSize="16" 
                           Margin="0,0,0,10" TextAlignment="Center"/>

                <ListBox Name="GamesListBox"
                         Background="#FF1E1E1E" Foreground="#FFD4D4D4"
                         BorderThickness="0"
                         ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                         ScrollViewer.VerticalScrollBarVisibility="Auto"
                         SelectionChanged="GamesListBox_SelectionChanged">

                    <ListBoxItem Tag="MostWanted2012" Padding="5" HorizontalContentAlignment="Center">
                        <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                            <Image Source="/Resources/Most Wanted.png" Width="50" Height="50" Margin="0,0,0,5"/>
                        </StackPanel>
                    </ListBoxItem>

                    <ListBoxItem Tag="BurnoutParadise" Padding="5" HorizontalContentAlignment="Center">
                        <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                            <Image Source="/Resources/Burnout Paradise.png" Width="50" Height="50" Margin="0,0,0,5"/>
                        </StackPanel>
                    </ListBoxItem>

                    <ListBoxItem Tag="NfsHotPursuit" Padding="5" HorizontalContentAlignment="Center">
                        <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                            <Image Source="/Resources/Hot pursuit.png" Width="50" Height="50" Margin="0,0,0,5"/>
                        </StackPanel>
                    </ListBoxItem>

                </ListBox>

                <StackPanel Orientation="Vertical" Margin="10" HorizontalAlignment="Center">
                    <Button Width="175" Height="30" Content="Add" Click="AddGame_Click"
                            Background="#FF3E3E42" Foreground="White" BorderThickness="0"/>
                    <Button Width="175" Height="30" Content="Delete" Click="DeleteGame_Click"
                            Background="#FF3E3E42" Foreground="White" BorderThickness="0" Margin="0,5,0,5"/>
                    <Button x:Name="OpenButton" Width="175" Height="30" Content="Open" Click="OpenButton_Click"
                            Background="#FF3E3E42" Foreground="White" BorderThickness="0"/>
                </StackPanel>
            </StackPanel>

            <!-- CONTENT AREA -->
            <Border Grid.Column="1" Margin="10"
                    Background="#FF252526" BorderBrush="#FF3E3E42" BorderThickness="1" CornerRadius="6">
                <DockPanel LastChildFill="True" Margin="10">
                    <TextBlock Text="Select a game to view projects"
                               Foreground="White" FontSize="14" Margin="0,0,0,10" DockPanel.Dock="Top"/>
                    <ListView Name="ProjectsListView"
                              Background="#FF1E1E1E" Foreground="White" BorderThickness="0"/>
                </DockPanel>
            </Border>
        </Grid>
    </DockPanel>
</Window>
