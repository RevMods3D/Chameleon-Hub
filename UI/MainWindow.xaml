<Window x:Class="Chameleon_Hub.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Title="Chameleon Hub" Height="450" Width="800">

    <Border CornerRadius="20" Padding="0" SnapsToDevicePixels="True">
        <Border.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#FF460046" Offset="0.1"/>
                <GradientStop Color="#FF004A25" Offset="0.5"/>
                <GradientStop Color="#FF00254A" Offset="1.0"/>
            </LinearGradientBrush>
        </Border.Background>

        <Grid>
            <!-- Your existing content grid -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="70"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Top Bar with rounded corners -->
                <Border Grid.Row="0" Background="#662F2F2F" CornerRadius="0,20,0,20" MouseDown="DragWindow_MouseDown">
                    <Grid>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Width="70">
                            <Button Width="70" Height="20" Content="×" FontSize="16" Click="CloseButton_Click" 
                                    Background="Transparent" Foreground="White" BorderThickness="0,0,0,0" BorderBrush="Black" RenderTransformOrigin="0.5,0.5" >
                                <Button.RenderTransform>
                                    <TransformGroup>
                                        <ScaleTransform/>
                                        <SkewTransform/>
                                        <RotateTransform/>
                                        <TranslateTransform X="0"/>
                                    </TransformGroup>
                                </Button.RenderTransform>
                            </Button>
                        </StackPanel>

                        <StackPanel Grid.Row="2" Orientation="Vertical" HorizontalAlignment="Center" Margin="10" >
                            <Button Width="50" Height="30" Content="Add" FontSize="14" Click="AddGame_Click"
                    Background="#3F0A0A0A" Foreground="White" BorderThickness="0" />
                            <Button Width="50" Height="30" Content="Delete" FontSize="14" Click="DeleteGame_Click"
                    Background="#3F0A0A0A" Foreground="White" BorderThickness="0" />
                            <Button x:Name="OpenButton" Width="50" Height="30" Content="Open" FontSize="14" Click="OpenButton_Click"
                    Background="#3F0A0A0A" Foreground="White" BorderThickness="0" />
                        </StackPanel>

                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <!-- Top bar -->
                            <RowDefinition Height="*"/>
                            <!-- Main content -->
                            <RowDefinition Height="Auto"/>
                            <!-- Bottom bar -->
                        </Grid.RowDefinitions>
                    </Grid>
                </Border>


                <!-- Side Panel for Games -->
                <StackPanel Grid.Column="0">
                    <Image x:Name="Engine_Icon" Source="/Resources/Chameleon hub.png" 
                           Width="65" Height="65" Stretch="Fill" RenderTransformOrigin="0.5,0.5" Margin="0,40,0,0">
                        <Image.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform/>
                                <SkewTransform/>
                                <RotateTransform Angle="0"/>
                                <TranslateTransform X="0" Y="-15"/>
                            </TransformGroup>
                        </Image.RenderTransform>
                    </Image>
                    <TextBlock Text="Games" Foreground="White" FontSize="16" Margin="10,10,10,10" Width="50" TextAlignment="Center" Height="20" RenderTransformOrigin="0.5,0.5" >
                        <TextBlock.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform/>
                                <SkewTransform/>
                                <RotateTransform/>
                                <TranslateTransform Y="22"/>
                            </TransformGroup>
                        </TextBlock.RenderTransform>
                    </TextBlock>
                    <ListBox Name="GamesListBox" 
                             Background="#00303030"
                             BorderThickness="0,0,0,0"
                             ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                             ScrollViewer.VerticalScrollBarVisibility="Auto"
                             SelectionChanged="GamesListBox_SelectionChanged" Width="70" BorderBrush="#FF303030" Margin="0,0,0,0" RenderTransformOrigin="0.5,0.5">
                        <ListBox.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform/>
                                <SkewTransform/>
                                <RotateTransform/>
                                <TranslateTransform Y="15"/>
                            </TransformGroup>
                        </ListBox.RenderTransform>
                        <ListBoxItem Tag="MostWanted2012" Visibility="Collapsed" Padding="5" Margin="0" HorizontalContentAlignment="Center">
                            <Image Source="/Resources/Most Wanted.png" Width="50" Height="50"/>
                        </ListBoxItem>
                        <ListBoxItem Tag="BurnoutParadise" Visibility="Collapsed" Padding="5" Margin="0" HorizontalContentAlignment="Center">
                            <Image Source="/Resources/Burnout Paradise.png" Width="50" Height="50"/>
                        </ListBoxItem>
                        <ListBoxItem Tag="NfsHotPursuit" Visibility="Collapsed" Padding="5" Margin="0" HorizontalContentAlignment="Center">
                            <Image Source="/Resources/Hot pursuit.png" Width="50" Height="50"/>
                        </ListBoxItem>
                    </ListBox>
                </StackPanel>

                <!-- Main Content Panel for Projects -->
                <Border Grid.Column="1" Padding="10" RenderTransformOrigin="0.5,0.5">
                    <Border.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform ScaleY="1"/>
                            <SkewTransform/>
                            <RotateTransform/>
                            <TranslateTransform/>
                        </TransformGroup>
                    </Border.RenderTransform>
                    <Border Background="#80000000" CornerRadius="8" BorderThickness="1" BorderBrush="#40FFFFFF" Padding="10" Height="430" Width="707" VerticalAlignment="Bottom">
                        <DockPanel LastChildFill="True">
                            <TextBlock Text="Select a game to view projects" 
                                       Foreground="White" FontSize="14" 
                                       Margin="0,0,0,10" DockPanel.Dock="Top"/>
                            <ListView Name="ProjectsListView" 
                                      Background="#3E000000" 
                                      Foreground="White" Opacity="1"/>
                        </DockPanel>
                    </Border>
                </Border>
            </Grid>
        </Grid>
    </Border>
</Window>
