<Window x:Class="Chameleon_Hub.EditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Editor" Height="625" Width="1000"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">

    <Border CornerRadius="20" Padding="0" SnapsToDevicePixels="True">
        <Border.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#FF460046" Offset="0.1"/>
                <GradientStop Color="#FF004A25" Offset="0.5"/>
                <GradientStop Color="#FF00254A" Offset="1.0"/>
            </LinearGradientBrush>
        </Border.Background>

        <Grid>
            <!-- Left Vertical Bar -->
            <Border Width="60" CornerRadius="20,0,0,20" VerticalAlignment="Stretch" HorizontalAlignment="Left" MouseDown="DragWindow_MouseDown" Background="#7F000000">
                <StackPanel x:Name="Drag" Orientation="Vertical" Margin="5,10">
                    <!-- Close Button on top -->
                    <Button Content="×" Width="40" Height="40" Background="Transparent" Foreground="White"
                    BorderBrush="{x:Null}" Click="CloseButton_Click"
                    FontSize="20"
                    Padding="0" Margin="0,0,0,10"
                    Cursor="Hand" />
                    <Image x:Name="Engine_Icon" Source="/Resources/Chameleon hub.png" 
                    Width="50" Height="50" Stretch="Fill" RenderTransformOrigin="0.5,0.5" Margin="0,10,0,0">
                        <Image.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform/>
                                <SkewTransform/>
                                <RotateTransform Angle="0"/>
                                <TranslateTransform X="0" Y="-15"/>
                            </TransformGroup>
                        </Image.RenderTransform>
                    </Image>
                </StackPanel>
            </Border>

            <!-- Main Content -->
            <Grid Margin="70,30,10,10">
                <!-- Add left margin to avoid overlap with vertical bar -->
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="261*" />
                    <ColumnDefinition Width="305*" />
                    <ColumnDefinition Width="87*"/>
                    <ColumnDefinition Width="327*" />
                </Grid.ColumnDefinitions>

                <!-- Left Panel: BNDL Files -->
                <Border Background="#7F000000" Margin="5,5,5,5" Grid.Column="0" CornerRadius="10" Padding="10" >
                    <StackPanel>
                        <TextBlock Text="Files" Foreground="White" FontWeight="Bold" Margin="0,0,0,10"/>

                        <DockPanel Margin="0,0,0,10">
                            <TextBox x:Name="SearchBox"
             Width="180"
             Height="25"
             VerticalAlignment="Center"
             Background="#7F000000"
             Foreground="White"
             Margin="0,0,5,0"
             Padding="6"
             BorderThickness="0"
             KeyDown="SearchBox_KeyDown" />
                            <Button Content="🔍"
            Width="30"
            Click="SearchButton_Click"
            ToolTip="Search BNDL Tree"
            Cursor="Hand" Background="#3F888888" BorderBrush="Black"/>
                        </DockPanel>

                        <TreeView x:Name="treeBndlFiles" Background="Transparent" Foreground="White" SelectedItemChanged="TreeBndlFiles_SelectedItemChanged"/>
                    </StackPanel>
                </Border>

                <!-- Center Panel: Selected BNDL Info -->
                <Border Background="#7F000000" Margin="5,5,5,5" Grid.Column="1" CornerRadius="10" Padding="10" Grid.ColumnSpan="2" >
                    <StackPanel>
                        <TextBlock x:Name="textBndlDatContent" Text="BNDL/DAT File Content" Foreground="White" FontWeight="Bold" Margin="0,0,0,10"/>

                        <DockPanel Margin="0,0,0,10">
                            <TextBox x:Name="HexSearchBox"
                     Width="300"
                     Height="25"
                     Background="#7F000000"
                     Foreground="White"
                     BorderThickness="0"
                     Padding="6,2"
                     KeyDown="HexSearchBox_KeyDown"/>
                            <Button Content="🔍"
                    Width="30"
                    Click="HexSearchButton_Click"
                    ToolTip="Search Hex/ASCII"
                    Cursor="Hand" Background="#3FDDDDDD" BorderBrush="Black"/>
                        </DockPanel>

                        <TreeView x:Name="treeDatContents" Background="Transparent" Foreground="White" Margin="0,0,0,10"/>

                        <!-- ASCII Box -->
                        <ScrollViewer Height="490">
                            <TextBox x:Name="textBoxAscii"
                     Background="#7FFFFFFF"
                     Foreground="Black"
                     FontFamily="Consolas"
                     FontSize="12"
                     TextWrapping="Wrap"
                     VerticalScrollBarVisibility="Auto"
                     HorizontalScrollBarVisibility="Auto"
                     IsReadOnly="True"
                     BorderThickness="0"/>
                        </ScrollViewer>
                    </StackPanel>
                </Border>

                <!-- Right Panel: DAT Contents -->
                <Border Background="#7F000000" Margin="5,5,5,5" Grid.Column="3" CornerRadius="10" Padding="10" >
                    <StackPanel>
                        <TextBlock Text="Hex Code" Foreground="White" FontWeight="Bold" Margin="0,0,0,5"/>
                        <ScrollViewer Height="490" Width="270" Margin="0,50,0,0">
                            <TextBox x:Name="textBoxHex"
                     Background="#7FFFFFFF"
                     Foreground="Black"
                     FontFamily="Consolas"
                     FontSize="12"
                     TextWrapping="Wrap"
                     VerticalScrollBarVisibility="Auto"
                     HorizontalScrollBarVisibility="Auto"
                     IsReadOnly="True"
                     BorderThickness="0"/>
                        </ScrollViewer>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>
    </Border>

    <Window.Resources>
        <RotateTransform x:Key="RotateTransform90" Angle="90" />
    </Window.Resources>
</Window>
